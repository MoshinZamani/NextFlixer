generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String?
  email     String    @unique
  profiles  Profile[]
}

model Profile {
  id        Int       @id @default(autoincrement())
  userId    Int
  name      String
  avatar    String?
  watchlists Watchlist[]
  user      User      @relation(fields: [userId], references: [id])
}

model Watchlist {
  id        Int       @id @default(autoincrement())
  profileId Int
  name      String
  movies    Movie[]   // Removed the incorrect @relation attribute
  profile   Profile   @relation(fields: [profileId], references: [id])
}

model Movie {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  watchlists  Watchlist[] // Removed the incorrect @relation attribute
}
